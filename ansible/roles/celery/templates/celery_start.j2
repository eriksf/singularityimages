#!/bin/sh

DJANGODIR={{ project_path }}

# Activate the virtual environment.
cd $DJANGODIR
. {{ virtualenv_path }}/bin/activate
. {{ virtualenv_path }}/bin/postactivate

# Programs meant to be run under supervisor should not daemonize themselves
# (do not use --daemon).
celery -A {{ application_name }} worker -E -l info --concurrency={{ celery_num_workers }}
celery -A {{ application_name }} beat -l info -S django
exec celery -A {{ application_name }} flower --port=5555
